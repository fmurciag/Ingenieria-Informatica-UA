;arboles binarios
(define vacio-arbolb '())

(define (construye-arbolb dato hijo-izq hijo-der)
  (list dato hijo-izq hijo-der))

(define (dato-arbolb arbol)
  (car arbol))

(define (hijo-izq-arbolb arbolb)
  (car (cdr arbolb)))

(define (hijo-der-arbolb arbolb)
  (car (cddr arbolb)))

(define (vacio-arbol? arbol)
  (null? arbol))
